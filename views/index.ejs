<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include('../views/partials/head.ejs')%>
  </head>
  <body>

    <div class="container">
      <h1 class="mb-4">Blog Index Page</h1>
      <a href="/blogs/new" class="btn btn-success">New Blog</a>
      <ul>
              <% for(let i = 0; i < blog.length; i++) { %>
                  <li>
                    <a href="/blogs/<%=blog[i].id%>">
                        <%=blog[i].title%>

                    </a>
                      <form action="/blogs/<%=blog[i].id%>?_method=DELETE" method="POST">
                          <input type="submit" value="DELETE"/>
                      </form>
                      <a href="/blogs/<%=blog[i].id%>/edit">EDIT</a>
                  </li>
              <% } %>
          </ul>
  </div>
  </body>
</html>
